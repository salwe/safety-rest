.calc.h-block-white
	.row
		.large-12.columns
			.calc__title Не забудьте купить страховку
			label Куда поедете?
			.calc__h-country-inp
				span
				input(type="text",placeholder="Введите название страны").calc__country-inp
	.row
		.large-6.columns
			.calc__h-duration-cb
				input#multyPolis(type="checkbox")
				label(for="multyPolis") Полис на год
		.large-6.columns
			span.calc__duration-add-ico +
			span.calc__duration-add-btn добавить страну
